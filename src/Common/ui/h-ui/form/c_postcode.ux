<import name="h-input" src="./c_input"></import>
<template>
    <h-input id="{{id}}" params="{{params}}" type="number" type-icon="location" no-border="{{noBorder}}" form-horizontal="{{compFormHorizontal}}"
              title="{{compTitle}}" name="{{name}}" focus="{{focus}}" maxlength="{{maxlength}}" 
              placeholder="{{compPlaceholder}}" value="{{value}}" align-right="{{alignRight}}" tip="{{tip}}" 
              valid="{{valid}}" valid-icon="{{compValidIcon}}" not-blank="{{compNotBlank}}" disabled="{{disabled}}"
              pattern="[1-9]{1}(\d+){5}"
              form-error="{{formError}}" h-style="{{hStyle}}">
    </h-input>
</template>

<script>
    export default {
        props: {
            id:{},
            params: {},
            noBorder: {
                default: false
            },
            formHorizontal: {
                default: false
            },
            title: {
                default: '邮政编码'
            },
            name: {
                default: ''
            },
            focus: {
                default: false
            },
            maxlength: {
                default: 6
            },
            placeholder: {
                default: '请输入邮政编码'
            },
            value: {
                default: ''
            },
            alignRight: {
                default: false
            },
            tip: {
                default: ''
            },
            valid: {
                default: ''
            },
            validIcon: {
                default: ''
            },
            notBlank: {
                default: ''
            },
            formError: {
                default: ''
            },
            disabled:{
                default: false
            },
            hStyle:{
                default: ''
            }
        },
        computed: {
            compTitle() {
                return this.title==='none' ? "" : this.title
            },
            compPlaceholder() {
                return this.placeholder==='none' ? "" : this.placeholder
            },
            compFormHorizontal() {
                return this.noBorder ? true : this.formHorizontal
            },
            compNotBlank() {
                return this.disabled ? false : (this.notBlank==='false' ? false : true)
            },
            compValidIcon() {
                return this.validIcon==='none' ? false : true
            }
        }
    }
</script>